pipeline {
    agent {
        docker {
            image 'adi089/javatest:latest'
        }
    }
    stages {
        stage('Verify Files') {
            steps {
                sh 'pwd && ls -l /opt/app'
            }
        }
        stage('Run Application') {
            steps {
                sh 'java -jar /opt/app/app.jar'
            }
        }
    }
}
