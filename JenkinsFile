pipeline {
    agent {
        docker {
            image 'adi089/javatest:latest'
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock -w /opt/app'
        }
    }
    stages {
        stage('Debug') {
            steps {
                sh 'pwd && ls -l'
            }
        }
    }
}